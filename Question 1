package labTest2;
import java.util.Scanner;
public class Question1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// A student will not be allowed to sit in an exam if his/her attendance is less than 75%.
		//Take the following input from the user:
			//a. Number of classes held
			//b. The number of classes attended.
			//c. Print percentage of class attended, is the student is allowed to sit in exam or not?
		
		Scanner input = new Scanner (System.in);
		//if-else statement is true or false statement
		System.out.print("Number of classes held:  : ");
		int classes = input.nextInt();
		System.out.print("The number of classes attended: ");
		int classesAttended = input.nextInt();
		int percentage ;
		percentage = (classesAttended/classes)/100;
		System.out.println("Your percentage of classes is" + percentage);
		
		
		if (percentage >= 75) {
			System.out.printf("you allow to attend the exam ");
		}
		else {
			System.out.println("You are not allowed to attend the class");
		}
		
		

	}

}
